<?xml version='1.0' encoding='utf-8'?>
<widget id="io.lawnchair.cordova.spec" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Lawnchair Cordova Spec</name>
    <description>
        Runs lawnchair qunit tests in cordova environment
    </description>
    <author email="dpa99c@gmail.com" href="https://github.com/dpa99c">Dave Alden</author>
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-sqlite-storage" version="*" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
